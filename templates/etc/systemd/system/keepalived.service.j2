{% if keepalived_install_from == 'git' %}
{% set keepalived_path = '/usr/local/sbin/' %}
{% else %}
{% set keepalived_path = '/usr/sbin/' %}
{% endif %}
; {{ ansible_managed }}

[Unit]
Description=Keepalived
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
ExecStart={{ keepalived_path }}keepalived --dont-fork{% for option in keepalived_options %} --{{ option.name }}{% if option.value is defined %}={{ option.value }}{% endif %}{% endfor %}

ExecReload=/bin/kill -HUP $MAINPID
KillMode=process
Restart=always

[Install]
WantedBy=multi-user.target
